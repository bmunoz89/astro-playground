---
import { Picture } from "astro:assets";

interface Props {
  id: string;
  img: string;
  success: boolean;
  flightNumber: number;
  details: string | null;
}

const { success, flightNumber, img, id, details } = Astro.props;
const launchStatus = success ? "Success" : "Failure";
---

<a
  href={`/launch/${id}`}
  class="flex flex-col items-center rounded-lg border border-gray-700 bg-gray-800 shadow-md transition hover:scale-105 hover:border-gray-500 hover:bg-gray-700"
>
  <Picture
    src={img}
    class="flex justify-center p-4"
    alt={`Path for launch ${id}`}
    pictureAttributes={{ class: "mb-5 rounded-lg" }}
    width="256"
    height="256"
  />

  <header class="flex-grow p-4">
    <span
      class="mr-2 rounded px-2.5 py-0.5 text-xs font-semibold"
      class:list={{
        "bg-green-200 text-green-900": success,
        "bg-red-200 text-red-900": !success,
      }}>{launchStatus}</span
    >

    <h2 class="my-2 text-2xl font-bold tracking-tight">
      Flight #{flightNumber}
    </h2>

    <p class="mb-4 font-light text-gray-400">
      {
        details && details.length > 100 ?
          details.slice(0, 100) + "..."
        : details
      }
    </p>
  </header>
</a>
